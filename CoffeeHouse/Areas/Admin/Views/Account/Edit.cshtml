@model CoffeeHouse.ViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Account" asp-action="Edit" method="post">
            <h4>Chỉnh sửa tài khoản</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly="readonly" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Model.RoleTypes" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-default">
                Trở lại
            </button>
            <button type="submit" class="btn btn-default btn-success">
                Xác nhận
            </button>
        </form>
    </div>
    <div class="col-md-8">
    </div>
</div>