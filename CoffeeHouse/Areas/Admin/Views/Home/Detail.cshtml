@model CoffeeHouse.Data.Models.Drink

<h1>Chi tiết sản phẩm</h1>
<a asp-area="Admin" asp-controller="Home" asp-action="Index">Quay lại trang trước</a>
<table>
    <tr>
        <th>Tên sản phẩm</th>
        <th>Loại sản phẩm</th>
        <th>Mô tả</th>
        <th>Giá tiền</th>
        <th>Hình ảnh</th>
    </tr>
    <tr>
        <td>@Model.DrinkName</td>
        <td>@Model.Category.CategoryName</td>
        <td>@Model.Description</td>
        <td>@Model.Price</td>
        <td><img style="width:150px;" src="~/img/Drinks/@Model.Photo" /></td>
    </tr>
</table>

