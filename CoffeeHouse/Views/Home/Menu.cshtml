                    if (item.Category.CategoryName == "Đồ ăn")
                    {
                        <div class="pricing-entry d-flex ftco-animate">
                            <div class="img" style="background-image: url(/img/Drinks/@item.Photo);"></div>
                            <div class="desc pl-3">
                                <div class="d-flex text align-items-center">
                                    <h3><span>@item.DrinkName</span></h3>
                                    <span class="price">$@String.Format("{0:0.00}", item.Price)</span>
